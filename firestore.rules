rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colección "proyectos"
    match /proyectos/{proyectoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- REGLA CORREGIDA Y MEJORADA ---
    // Regla para la colección "testimonios"
    match /testimonios/{testimonioId} {
      // Cualquiera puede crear un testimonio si cumple con el formato
      allow create: if request.resource.data.nombreCliente is string
                      && request.resource.data.textoTestimonio is string
                      && request.resource.data.calificacion is number
                      && request.resource.data.estado == "pendiente";

      // Solo el admin puede leer, actualizar o borrar testimonios
      allow read, update, delete: if request.auth != null;
    }

    // Regla para la colección "blogPosts"
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

  }
}